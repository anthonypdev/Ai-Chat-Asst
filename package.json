{
  "name": "parkland-ai-opus-magnum",
  "version": "2.0.0",
  "description": "A premium AI chat interface with cinematic themes and AAA-level animations",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint js/**/*.js --fix",
    "format": "prettier --write .",
    "serve": "http-server -p 8080 -c-1",
    "audit": "npm audit",
    "security-check": "npm audit --audit-level moderate",
    "validate": "npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "ai",
    "chat",
    "anthropic",
    "claude",
    "voice",
    "themes",
    "pwa",
    "accessibility"
  ],
  "author": "Parkland AI Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/parkland-ai/opus-magnum"
  },
  "bugs": {
    "url": "https://github.com/parkland-ai/opus-magnum/issues"
  },
  "homepage": "https://parkland-ai.github.io/opus-magnum",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@testing-library/dom": "^9.3.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/user-event": "^14.5.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-accessibility": "^3.0.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.0.0",
    "prettier": "^3.0.0",
    "vite": "^4.4.0",
    "vite-plugin-pwa": "^0.16.0"
  },
  "dependencies": {
    "fuse.js": "^6.6.2",
    "jspdf": "^2.5.1",
    "lodash-es": "^4.17.21",
    "turndown": "^7.1.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/**/*.test.js",
      "!js/**/*.spec.js",
      "!workers/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "moduleFileExtensions": ["js", "json"],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/js/**/*.test.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2022": true,
      "jest": true,
      "worker": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    },
    "globals": {
      "global": "readonly"
    }
  }
}